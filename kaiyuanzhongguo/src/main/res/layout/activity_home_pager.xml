<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home_pager"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.liu.administratorexample.kaiyuanzhongguo.View.HomePager">
    <RelativeLayout
        android:id="@+id/tiao_rll"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/actionbar_background"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tiao_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:text="综 合"
            android:textColor="#FFF"
            android:textSize="20sp"/>

        <ImageView
            android:id="@+id/tiao_img"
            android:layout_width="40dp"
            android:layout_height="40dp"

            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.3">

    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#0ADB50">

    </View>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">


        <RadioGroup
            android:id="@+id/rgTools"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:orientation="horizontal">


            <RadioButton
                android:id="@+id/zh"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:button="@null"
                android:checked="true"
                android:drawableTop="@drawable/synthesize"
                android:gravity="center"
                android:text="综合"/>

            <RadioButton
                android:id="@+id/dt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:checked="false"
                android:drawableTop="@drawable/move"
                android:gravity="center"
                android:text="动弹"/>

            <ImageView
                android:id="@+id/jia"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_nav_add_actived"
                android:layout_margin="10dp"
                android:gravity="center"/>
            <RadioButton
                android:checked="false"
                android:id="@+id/fa"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/spealch"
                android:gravity="center"
                android:text="发现"/>

            <RadioButton
                android:checked="false"
                android:id="@+id/wo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/mine"
                android:gravity="center"
                android:text="我的"/>

        </RadioGroup>

    </LinearLayout>
</LinearLayout>
