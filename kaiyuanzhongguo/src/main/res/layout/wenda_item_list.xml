<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/yuan"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:id="@+id/yuan_ima"

        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tuijian_ima"
        android:src="@mipmap/tuijian"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/yuan_ima"
        />

    <TextView
        android:id="@+id/every_tit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="17dp"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/tuijian_ima"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:id="@+id/every_xiangqing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="15dp"
        android:layout_below="@+id/every_tit"
        android:layout_alignLeft="@id/yuan_ima"
        android:layout_alignStart="@id/yuan_ima"
        android:layout_marginTop="11dp" />

    <TextView
        android:id="@+id/every_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="TextView"
        android:layout_below="@id/every_xiangqing"
        android:layout_alignLeft="@id/every_xiangqing"
        android:layout_alignStart="@id/every_xiangqing" />

    <TextView
        android:id="@+id/every_time3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:text="TextView"
        android:layout_alignBaseline="@id/every_author"
        android:layout_alignBottom="@id/every_author"
        android:layout_toRightOf="@id/every_xiangqing"
        android:layout_toEndOf="@id/every_xiangqing" />

    <TextView
        android:id="@+id/every_newstype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"

        android:layout_alignBottom="@+id/every_dianzan"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/every_dianzan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/yan"
        android:layout_alignTop="@+id/every_time3"
        android:layout_toLeftOf="@+id/every_newstype"
        android:layout_toStartOf="@+id/every_newstype" />
</RelativeLayout>