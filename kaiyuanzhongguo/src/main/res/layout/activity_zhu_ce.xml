<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@mipmap/bg_login"
    tools:context="com.example.kaiyuanzhongguo.View.WoDeActivity.DengLuActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_denglu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.Toolbar>
    <ImageView
        android:src="@drawable/logo_osc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"/>
    <LinearLayout
        android:layout_margin="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="60dp"
        android:background="@drawable/login_ed">
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_singup_mobile"/>
        <EditText
            android:id="@+id/shoujihao_zhuce"
            android:textColorHint="#ffff"
            android:background="@null"
            android:hint="手机号"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="60dp"
        android:background="@drawable/login_ed">
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_login_password"/>
        <EditText
            android:id="@+id/yanzhengma_zhuce"
            android:textColorHint="#ffff"
            android:background="@null"
            android:hint="短信验证码"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/huoquyanzhengma"
            android:textSize="10dp"
            android:text="获取验证码"
            android:textColor="#ffff"
            android:gravity="center"
            android:background="@drawable/login_ed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Button
        android:id="@+id/zhuce_zhuce"
        android:text="注册"
        android:textColor="#ffff"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



</LinearLayout>
