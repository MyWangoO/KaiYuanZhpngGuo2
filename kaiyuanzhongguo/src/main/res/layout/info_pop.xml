<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText

        android:id="@+id/info_pop_et"
        android:layout_width="320dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:gravity="top"
        android:layout_marginTop="15dp"
        android:background="@drawable/info_et"
        android:nestedScrollingEnabled="true"
        android:textSize="13dp"
        android:hint="发表评论" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <ImageButton
            android:id="@+id/info_pop_ib"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/ddd"/>

        <ImageView
            android:id="@+id/info_pop_zhuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:background="@drawable/form_checkbox_normal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:text="转发到微博"/>

        <Button
            android:id="@+id/info_pop_btn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"

            android:text="发送"/>
    </LinearLayout>
</LinearLayout>